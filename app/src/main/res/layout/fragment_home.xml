<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="230dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sharing smile through electronic repairing."
            android:textStyle="bold"
            android:layout_marginTop="15sp"
            android:gravity="center"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categories"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_height="115dp"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/tvbook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click Here To Book Electronic Repairing."
            android:textStyle="bold"
            android:layout_marginTop="15sp"
            android:gravity="center"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/elect"
            android:layout_width="wrap_content"
            android:layout_height="220dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/elect" />



        <TextView
            android:id="@+id/social"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textStyle="bold"

            android:text="Contact Us for more detail!"
            />


        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:layout_gravity="center"
            android:text="9860882343"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:layout_gravity="center"
            android:text="Jadibuti, Kathmandu"
            android:textSize="20sp" />




        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="Connect with us on Social media"
            />




        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/socialf"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/facebook" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/sociali"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/insta" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/socialt"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/twiter" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/socialy"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/youtube" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/socialv"
                android:layout_width="80sp"
                android:layout_height="40dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/vibers" />


        </LinearLayout>


















    </LinearLayout>
</androidx.core.widget.NestedScrollView>